source "${SOURCE_DIRNAME}/colors.rc"

## @var THEME_DEBUG_COLOR
## @brief default color to display debug messages
declare THEME_DEBUG_COLOR=${COLOR_SILVER}

## @var THEME_DEVEL_COLOR
## @brief default color to display development messages
declare THEME_DEVEL_COLOR=${COLOR_GRAY}

## @var THEME_ERROR_COLOR
## @brief default color to display error messages
declare THEME_ERROR_COLOR=${COLOR_RED}

## @var THEME_INFO_COLOR
## @brief default color to display informations
declare THEME_INFO_COLOR=${COLOR_GREEN}

## @var THEME_TITLE_COLOR
## @brief default color to display titles
declare THEME_TITLE_COLOR=${COLOR_LIME}

## @var THEME_VERBOSE_COLOR
## @brief default color to display verbose informations
declare THEME_VERBOSE_COLOR=${COLOR_WHITE}

## @var THEME_WARNING_COLOR
## @brief default color to display warnings
declare THEME_WARNING_COLOR=${COLOR_YELLOW}

