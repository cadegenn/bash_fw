## @var INDENT
## @brief current indentation
declare -g INDENT=

## @fn eindent()
## @brief add indentation
eindent() {
	INDENT="  ${INDENT}"
}

## @fn eoutdent()
## @brief remove indentation
eoutdent() {
	INDENT=${INDENT/  /}
}

